总结  useEffect(() => {
    if (noExistingBlog) {
      Swal.fire({
        title: "",
        text: "该文章不存在！",
        icon: "error",
        timer: 1500,
        showConfirmButton: false,
      }).then(() => {
        if (user?.role === "Registered User") {
          navigate("/blogs/mine");
        } else {
          navigate("/blogs");
        }
      });
    }
  }, [noExistingBlog, user, navigate]);

  if (authLoading || editorLoading) return <p>检测权限...</p>;
  if (!authenticated) {
    navigate("/users/login");
    return null;
  }

  // 渲染前就 return null，避免访问不存在的数据
  if (noExistingBlog) return null;

